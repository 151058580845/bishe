<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.lym.image.select.test" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for org.lym.image.select.test"
        android:targetPackage="org.lym.image.select.test" />

    <application
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true" >
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="org.lym.image.select.ui.SelectImageActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name="org.lym.image.select.ui.PreviewImageActivity" />
        <activity
            android:name="org.lym.image.select.ui.CameraActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>