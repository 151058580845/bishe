<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:id="@+id/zufang_c"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <ImageView
       android:src="@drawable/fangzi"
       android:id="@+id/zufang_photo"
       android:layout_width="60dp"
       android:layout_height="60dp"

       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/adapter_zufang_address"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="整租-xx小区  2室一厅  南"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/zufang_photo"/>

    <TextView
        android:id="@+id/adapter_zufang_money"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/red"
        android:layout_height="wrap_content"
        android:text="4700"

        app:layout_constraintBottom_toBottomOf="@+id/zufang_photo"
        app:layout_constraintLeft_toRightOf="@+id/zufang_photo"/>

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:textSize="13dp"
        android:layout_height="wrap_content"
        android:text="元/月"

        app:layout_constraintBottom_toBottomOf="@+id/zufang_photo"
        app:layout_constraintLeft_toRightOf="@+id/zufang_money"/>

</androidx.constraintlayout.widget.ConstraintLayout>
